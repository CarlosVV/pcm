@using ProjectContentManager.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="middle-box text-center loginscreen  animated fadeInDown">
    <div>
        <div>

            <h1 class="logo-name">PCM</h1>

        </div>
        <h3>Bienvenido a PCM</h3>
        <p>
            El Sistema de Manejo de Contenidos de Proyectos
        </p>
        <p>Ingrese sus credenciales. Lo verá en acción.</p>
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "m-t", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Username", @required = "", @type = "email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @required = "" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b">Ingresar</button>

            <a href="#"><small>Forgot password?</small></a>
            <p class="text-muted text-center"><small>Do not have an account?</small></p>
            <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Register", "Account")">Regístrese</a>
            @* Enable this once you have account confirmation enabled for password reset functionality
                <p>
                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                </p>*@
        }

        <p class="m-t"> <small>Sistema de Manejo de Contenidos de Proyectos &copy; 2018</small> </p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/validate")
}