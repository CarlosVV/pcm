@model ProjectContentManager.Models.RegisterViewModel
@{
    ViewBag.Title = "Registar";
}

<div class="middle-box text-center loginscreen   animated fadeInDown">
    <div>
        <div>
            <h1 class="logo-name">PCM</h1>
        </div>
        <h3>Registrarse en el Sistema de Manejo de Contenidos</h3>
        <p>Create account to see it in action.</p>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "m-t", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "Nombres", @required = "" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.FirstLastName, new { @class = "form-control", @placeholder = "Primer Apellido", @required = "" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.SecondLastName, new { @class = "form-control", @placeholder = "Segundo Apellido", @required = "" })
            </div>
            <div class="form-group">
                @Html.EditorFor(m => m.BirthDate, new { @class = "form-control", @placeholder = "Fecha de nacimiento", @required = "" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Position, new { @class = "form-control", @placeholder = "Cargo", @required = "" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @required = "", @type = "email" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @required = "" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirmar Password", @required = "" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(m => m.RoleId, Model.Roles, "--Seleccione un Rol de Usuario--", new { @class = "form-control", @placeholder = "Rol de Usuario", @required = "" })
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b">Registrar</button>

            @*<p class="text-muted text-center"><small>Already have an account?</small></p>
            <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Login", "Account")">Ingresar</a>*@

        }
        <p class="m-t"> <small>Sistema de Manejo de Contenidos de Proyectos &copy; 2018</small> </p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/validate")
}
